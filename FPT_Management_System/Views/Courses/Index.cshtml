@model IEnumerable<FPT_Management_System.Models.Course>
@{
    ViewBag.Title = "Courses";
}

<div class="page-header">
    <h2 style="margin-bottom: 15px">List Of Courses</h2>
</div>

<div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
    <div class="form-group">
        @Html.ActionLink("Create a New Course", "Create", "Todos", new { @class = "btn btn-primary" })
        @Html.ActionLink("See Stats", "Stats", "Todos", null, new { @class = "btn btn-info" })
        @Html.ActionLink("My Team", "Belong", "Todos", null, new { @class = "btn btn-danger" })
    </div>

    @using (Html.BeginForm("Index", "Todos", FormMethod.Get))
    {
        <div class="form-inline">
            @Html.TextBox("searchString", null, new { @class = "form-control" })
            <button type="Submit" class="btn btn-primary">Search</button>
        </div>
    }
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Course Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td style="vertical-align: middle">@item.Name</td>
                <td style="vertical-align: middle">@item.Description</td>
                <td style="vertical-align: middle">@item.CourseCategory.Name</td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", "Todos", new { id = @item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", "Todos", new { id = @item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", "Todos", new { id = @item.Id }, new { @class = "btn btn-danger" })*@
                </td>
            </tr>
        }
    </tbody>
</table>