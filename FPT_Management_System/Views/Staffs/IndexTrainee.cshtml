@model IEnumerable<FPT_Management_System.Models.Trainee>
@{
    ViewBag.Title = "IndexTrainee";
}

<h2 style="margin-bottom: 15px; text-align: center; margin-top: 45px;">List Of Trainee Account</h2>

<h4 style="margin-bottom: 15px; text-align: center; margin-top: 15px;" class="text-success">@TempData["Message"]</h4>

<h4 style="margin-bottom: 15px; text-align: center; margin-top: 15px;" class="text-danger">@TempData["Error"]</h4>

<div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
    <div class="form-group">
        @Html.ActionLink("Create a New Trainee", "CreateTraineeAccount", "Staffs", new { @class = "btn btn-primary" })
    </div>

    @using (Html.BeginForm("IndexTrainee", "Staffs", FormMethod.Get))
    {
        <div class="form-inline">
            @Html.TextBox("searchTrainee", null, new { @class = "form-control" })
            <button type="Submit" class="btn btn-primary">Search</button>
        </div>
    }
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Trainee Email</th>
            <th scope="col">Trainee FullName</th>
            <th scope="col">Trainee Age</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td style="vertical-align: middle" scope="row">@item.User.Email</td>
                <td style="vertical-align: middle">@item.FullName</td>
                <td style="vertical-align: middle">@item.Age</td>
                <td>
                    @Html.ActionLink("Edit Trainee Info", "EditTraineeAccount", "Staffs", new { id = @item.TraineeId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete Trainee", "DeleteTraineeAccount", "Staffs", new { id = @item.TraineeId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Trainee Details", "TraineeInfoDetails", "Staffs", new { id = @item.TraineeId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>